<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:backgroundTintMode="add">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="392dp"
        android:layout_below="@+id/selectedItemTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="9dp" />

    <TextView
        android:id="@+id/selectedItemTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="249dp"
        android:background="#008000"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#008000"
        android:text="Quản lý nhân viên"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/maNV"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:text="Mã NV:"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonNhapNV"
        android:layout_width="138dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="151dp"
        android:backgroundTint="#2A802D"
        android:text="Nhập NV"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/inputMaNV"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/maNV"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tenNV"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maNV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:text="Tên NV:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/loaiNV"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tenNV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:text="Loại NV:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputTenNV"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputMaNV"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/tenNV"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rgType"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputTenNV"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="23dp"
        android:layout_toEndOf="@+id/loaiNV"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/buttonChinhThuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chính thức"
            android:textSize="14sp"
            android:layout_marginRight="25dp"
            />

        <RadioButton
            android:id="@+id/buttonThoiVu"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputTenNV"
            android:text="Thời vụ"
            android:textSize="14sp" />
    </RadioGroup>


</RelativeLayout>